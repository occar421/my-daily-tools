    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run Daily Report Helper",
            "type": "node",
            "cwd": "${workspaceFolder}/daily-report-helper",
            "envFile": "${workspaceFolder}/.env",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "task",
                "run",
                "--startDate",
                "2025-04-01",
                "--endDate",
                "2025-04-02"
            ],
            "attachSimplePort": 9229
        }
    ]
}